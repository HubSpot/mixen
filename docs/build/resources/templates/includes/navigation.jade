.hs-doc-sidenav

  nav

    ul.hs-public-sidenav

      li(class=(path == 'index.html' ? 'current-nav-item' : ''))
        a(href=linkPrefix) Intro

      each group, name in docs
        if name
          li
            b= name

        each doc in group
          li(class=(doc.link == path ? 'current-nav-item' : ''))
            a(href=linkPrefix + doc.path)= doc.displayPath

      if sources.length
        li
          b Annotated source

        each file in sources
          li(class=(file.link == path ? 'current-nav-item' : ''))
            a(target="_blank", href=linkPrefix + file.path)= file.displayPath
